<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyanA200"
    tools:context="co.oriens.bluelight.FullScreenWakeUp"

    android:padding="0dp"
    android:clipToPadding="false">

    //Timer

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="invisible" />

    //Question Text
    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timerTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:padding="16dp"
        android:text="2 + 2 = ?"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:visibility="visible" />


    //Answer Buttons

    <Button
        android:id="@+id/answer3Button"
        android:layout_width="@dimen/answer_button_dimention"
        android:layout_height="@dimen/answer_button_dimention"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/answer2Button"
        android:background="@color/pink"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/text_view_margin"

        android:elevation="@dimen/button_elevation"/>

    <Button
        android:id="@+id/answer2Button"
        android:layout_width="@dimen/answer_button_dimention"
        android:layout_height="@dimen/answer_button_dimention"
        android:background="@color/pink"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/text_view_margin"

        android:elevation="@dimen/button_elevation"/>

    <Button
        android:id="@+id/answer1Button"
        android:layout_width="@dimen/answer_button_dimention"
        android:layout_height="@dimen/answer_button_dimention"
        android:background="@color/pink"
        android:layout_centerVertical="true"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/answer2Button"
        android:layout_margin="@dimen/text_view_margin"

        android:elevation="@dimen/button_elevation"/>

    //Pause Button

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:visibility="invisible"
        app:srcCompat="@drawable/pause_button"

        android:elevation="@dimen/button_elevation"/>

</RelativeLayout>
