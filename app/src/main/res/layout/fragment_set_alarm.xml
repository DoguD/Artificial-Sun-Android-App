<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.SetAlarmFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:text="@string/set_alarm_intro"
            android:layout_margin="@dimen/text_view_margin"
            android:padding="@dimen/text_view_padding"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textViewAlarmIntro" />


        <TextView
            android:text="@string/is_alarm_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textIsAlarmSet"
            android:layout_margin="@dimen/text_view_margin"
            android:padding="@dimen/text_view_padding"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/buttonSetAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textIsAlarmSet"
            android:layout_margin="@dimen/text_view_margin"
            android:padding="@dimen/text_view_padding"
            android:layout_centerHorizontal="true"
            android:text="@string/set_alarm_button"
            android:background="@color/colorAccent"
            android:textColor="@color/white"/>

        <TimePicker
            android:visibility="gone"
            android:id="@+id/alarmTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:timePickerMode="clock"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"/>

        <Button
            android:id="@+id/buttonSetAlarmFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarmTimePicker"
            android:layout_margin="@dimen/text_view_margin"
            android:padding="@dimen/text_view_padding"
            android:layout_centerHorizontal="true"
            android:text="@string/set_alarm_button"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:visibility="gone"/>
    </RelativeLayout>
</FrameLayout>
